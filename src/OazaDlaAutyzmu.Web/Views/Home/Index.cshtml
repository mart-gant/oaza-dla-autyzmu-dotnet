@{
    ViewData["Title"] = "Strona główna";
    var stats = ViewBag.Stats;
    var facilities = ViewBag.PopularFacilities as List<dynamic>;
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-20">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">
                🧩 Oaza dla Autyzmu
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-indigo-100">
                Znajdź najlepszą placówkę wsparcia dla swojego dziecka
            </p>
            <p class="text-lg mb-8 max-w-3xl mx-auto text-indigo-50">
                Kompleksowa platforma łącząca rodziców dzieci z autyzmem z profesjonalnymi ośrodkami terapeutycznymi,
                szkołami i innymi placówkami wsparcia w całej Polsce.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Facilities" asp-action="Index" 
                   class="inline-block px-8 py-4 btn-secondary font-semibold rounded-lg transition transform hover:scale-105">
                    🔍 Przeglądaj placówki
                </a>
                <a asp-controller="Forum" asp-action="Index" 
                   class="inline-block px-8 py-4 btn-primary font-semibold rounded-lg transition transform hover:scale-105">
                    💬 Dołącz do forum
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">
                    @stats.TotalFacilities
                </div>
                <div class="text-gray-600 dark:text-gray-400 font-medium">
                    Placówek w bazie
                </div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-green-600 dark:text-green-400 mb-2">
                    @stats.VerifiedFacilities
                </div>
                <div class="text-gray-600 dark:text-gray-400 font-medium">
                    Zweryfikowanych
                </div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-purple-600 dark:text-purple-400 mb-2">
                    @stats.TotalReviews
                </div>
                <div class="text-gray-600 dark:text-gray-400 font-medium">
                    Opinii rodziców
                </div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-blue-600 dark:text-blue-400 mb-2">
                    @stats.ForumTopics
                </div>
                <div class="text-gray-600 dark:text-gray-400 font-medium">
                    Tematów na forum
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-800 dark:text-white">
            Co oferujemy?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 transform hover:scale-105 transition">
                <div class="text-5xl mb-4">🏫</div>
                <h3 class="text-xl font-bold mb-3 text-gray-800 dark:text-white">
                    Wyszukiwarka placówek
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Znajdź ośrodki terapeutyczne, szkoły integracyjne i przedszkola specjalistyczne w Twojej okolicy.
                    Porównuj oferty i czytaj autentyczne opinie rodziców.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 transform hover:scale-105 transition">
                <div class="text-5xl mb-4">💬</div>
                <h3 class="text-xl font-bold mb-3 text-gray-800 dark:text-white">
                    Forum społeczności
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Dołącz do społeczności rodziców, dziel się doświadczeniami, zadawaj pytania specjalistom
                    i wspieraj innych w drodze do pomocy dziecku.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 transform hover:scale-105 transition">
                <div class="text-5xl mb-4">⭐</div>
                <h3 class="text-xl font-bold mb-3 text-gray-800 dark:text-white">
                    System opinii
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Sprawdź oceny i szczegółowe recenzje placówek od innych rodziców. Podziel się swoimi
                    doświadczeniami i pomóż innym w wyborze.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Popular Facilities Section -->
@if (facilities != null && facilities.Any())
{
    <section class="py-16 bg-white dark:bg-gray-800">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 dark:text-white">
                    Popularne placówki
                </h2>
                <a asp-controller="Facilities" asp-action="Index" 
                   class="inline-flex items-center px-3 py-2 btn-secondary rounded-lg font-semibold">
                    Zobacz wszystkie →
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var facility in facilities)
                {
                    <div class="bg-gray-50 dark:bg-gray-700 rounded-xl shadow-md hover:shadow-xl transition overflow-hidden">
                        <div class="p-6">
                            <div class="flex items-start justify-between mb-3">
                                <h3 class="text-xl font-bold text-gray-800 dark:text-white">
                                    @facility.Name
                                </h3>
                                @if (facility.AverageRating > 0)
                                {
                                    <div class="flex items-center bg-yellow-100 dark:bg-yellow-900 px-2 py-1 rounded">
                                        <span class="text-yellow-600 dark:text-yellow-400 font-bold text-sm">
                                            ⭐ @facility.AverageRating.ToString("0.0")
                                        </span>
                                    </div>
                                }
                            </div>

                            <div class="flex items-center text-gray-600 dark:text-gray-400 text-sm mb-3">
                                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                @facility.City
                            </div>

                            <div class="mb-4">
                                <span class="inline-block bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 text-xs px-3 py-1 rounded-full font-medium">
                                    @facility.Type
                                </span>
                            </div>

                            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">
                                @facility.Description
                            </p>

                            <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-600">
                                <span class="text-sm text-gray-500 dark:text-gray-400">
                                    💬 @facility.ReviewCount @(facility.ReviewCount == 1 ? "opinia" : facility.ReviewCount < 5 ? "opinie" : "opinii")
                                </span>
                                <a asp-controller="Facilities" asp-action="Details" asp-route-id="@facility.Id"
                                   class="inline-flex items-center px-3 py-2 btn-primary rounded-lg font-semibold text-sm">
                                    Zobacz więcej →
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="py-16 bg-gradient-to-r from-purple-600 to-indigo-600 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Dołącz do naszej społeczności
        </h2>
        <p class="text-xl mb-8 text-indigo-100">
            Razem możemy więcej! Zarejestruj się już dziś i skorzystaj z pełni możliwości platformy.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Facilities" asp-action="Create" 
                   class="inline-block px-8 py-4 btn-secondary font-semibold rounded-lg transition">
                    ➕ Dodaj placówkę
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" 
                   class="inline-block px-8 py-4 btn-secondary font-semibold rounded-lg transition">
                    📝 Zarejestruj się
                </a>
                <a asp-controller="Account" asp-action="Login" 
                   class="inline-block px-8 py-4 btn-primary font-semibold rounded-lg transition">
                    🔐 Zaloguj się
                </a>
            }
        </div>
    </div>
</section>
