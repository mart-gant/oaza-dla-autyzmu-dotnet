@model OazaDlaAutyzmu.Application.DTOs.FacilityDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-gray-600 dark:text-gray-400">
        <a asp-action="Index" class="hover:text-indigo-600">Placówki</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 dark:text-white">@Model.Name</span>
    </nav>

    @if (TempData["Success"] != null)
    {
        <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
            @TempData["Success"]
        </div>
    }

    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-6">
        <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
                <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">
                    @Model.Name
                </h1>
                <span class="@GetVerificationBadgeClass(Model.VerificationStatus)">
                    @GetVerificationLabel(Model.VerificationStatus)
                </span>
            </div>
            
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <div class="flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition">
                        Edytuj
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('Czy na pewno chcesz usunąć tę placówkę?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition">
                                Usuń
                            </button>
                        </form>
                    }
                </div>
            }
        </div>

        @if (Model.AverageRating.HasValue)
        {
            <div class="flex items-center mb-4">
                @for (int i = 1; i <= 5; i++)
                {
                    <svg class="w-6 h-6 @(i <= Model.AverageRating ? "text-yellow-500" : "text-gray-300")" 
                         fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                }
                <span class="ml-2 text-gray-600 dark:text-gray-400">
                    @Model.AverageRating.Value.ToString("0.0") (@Model.ReviewCount opinii)
                </span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-gray-700 dark:text-gray-300 text-lg mb-6">
                @Model.Description
            </p>
        }
    </div>

    <!-- Details -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <!-- Contact Info -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                Informacje kontaktowe
            </h2>
            
            <div class="space-y-4">
                <div class="flex items-start">
                    <svg class="w-6 h-6 mr-3 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white">Adres</p>
                        <p class="text-gray-600 dark:text-gray-400">@Model.Address</p>
                        <p class="text-gray-600 dark:text-gray-400">@Model.PostalCode @Model.City</p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <div class="flex items-start">
                        <svg class="w-6 h-6 mr-3 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">Telefon</p>
                            <a href="tel:@Model.PhoneNumber" class="text-indigo-600 hover:text-indigo-800">@Model.PhoneNumber</a>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <div class="flex items-start">
                        <svg class="w-6 h-6 mr-3 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">Email</p>
                            <a href="mailto:@Model.Email" class="text-indigo-600 hover:text-indigo-800">@Model.Email</a>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Website))
                {
                    <div class="flex items-start">
                        <svg class="w-6 h-6 mr-3 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">Strona www</p>
                            <a href="@Model.Website" target="_blank" class="text-indigo-600 hover:text-indigo-800">
                                @Model.Website
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Additional Info -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                Dodatkowe informacje
            </h2>
            
            <div class="space-y-4">
                <div>
                    <p class="font-medium text-gray-900 dark:text-white">Typ placówki</p>
                    <p class="text-gray-600 dark:text-gray-400">@GetFacilityTypeLabel(Model.Type)</p>
                </div>

                <div>
                    <p class="font-medium text-gray-900 dark:text-white">Status weryfikacji</p>
                    <p class="text-gray-600 dark:text-gray-400">
                        @GetVerificationLabel(Model.VerificationStatus)
                        @if (Model.VerifiedAt.HasValue)
                        {
                            <span>(Zweryfikowano: @Model.VerifiedAt.Value.ToString("dd.MM.yyyy"))</span>
                        }
                    </p>
                </div>

                @if (!string.IsNullOrEmpty(Model.VerifiedByName))
                {
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white">Zweryfikował</p>
                        <p class="text-gray-600 dark:text-gray-400">@Model.VerifiedByName</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Source))
                {
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white">Źródło informacji</p>
                        <p class="text-gray-600 dark:text-gray-400">@Model.Source</p>
                    </div>
                }

                <div>
                    <p class="font-medium text-gray-900 dark:text-white">Dodano</p>
                    <p class="text-gray-600 dark:text-gray-400">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Opinie (@ViewBag.Reviews.Count)
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- Review Form -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                    Dodaj opinię
                </h3>
                <form asp-controller="Reviews" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="facilityId" value="@Model.Id" />
                    
                    <div class="mb-4">
                        <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
                            Ocena
                        </label>
                        <div class="flex gap-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                var starId = $"star{i}";
                                <label class="cursor-pointer">
                                    <input type="radio" name="rating" value="@i" class="hidden peer" required />
                                    <svg class="w-8 h-8 text-gray-300 peer-checked:text-yellow-500 hover:text-yellow-400" 
                                         fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                </label>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
                            Komentarz (opcjonalnie)
                        </label>
                        <textarea name="comment" rows="4" 
                                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 dark:bg-gray-800 dark:text-white"
                                  placeholder="Podziel się swoją opinią..."></textarea>
                    </div>

                    <button type="submit" 
                            class="px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                        Dodaj opinię
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="bg-blue-50 dark:bg-blue-900 border border-blue-200 dark:border-blue-700 rounded-lg p-4 mb-6">
                <p class="text-blue-800 dark:text-blue-200">
                    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" 
                       class="font-semibold hover:underline">Zaloguj się</a>, aby dodać opinię.
                </p>
            </div>
        }

        <!-- Reviews List -->
        @if (ViewBag.Reviews.Count > 0)
        {
            <div class="space-y-4">
                @foreach (var review in ViewBag.Reviews)
                {
                    <div class="border-b border-gray-200 dark:border-gray-700 pb-4 last:border-0">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-2">
                                <span class="font-semibold text-gray-900 dark:text-white">
                                    @review.UserName
                                </span>
                                <div class="flex">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <svg class="w-5 h-5 @(i <= review.Rating ? "text-yellow-500" : "text-gray-300")" 
                                             fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                    }
                                </div>
                            </div>
                            <span class="text-sm text-gray-500 dark:text-gray-400">
                                @review.CreatedAt.ToString("dd.MM.yyyy")
                            </span>
                        </div>
                        @if (!string.IsNullOrEmpty(review.Comment))
                        {
                            <p class="text-gray-700 dark:text-gray-300">
                                @review.Comment
                            </p>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-600 dark:text-gray-400">Brak opinii. Bądź pierwszą osobą, która doda opinię!</p>
        }
    </div>

    <!-- Map (placeholder) -->
    @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                Lokalizacja na mapie
            </h2>
            <div class="bg-gray-200 dark:bg-gray-700 h-96 rounded-lg flex items-center justify-center">
                <p class="text-gray-600 dark:text-gray-400">
                    Mapa (Lat: @Model.Latitude, Lng: @Model.Longitude)
                    <br />
                    <small>Integracja z Google Maps / OpenStreetMap</small>
                </p>
            </div>
        </div>
    }
</div>

@functions {
    string GetVerificationBadgeClass(string status) => status switch
    {
        "Certified" => "px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-semibold inline-block",
        "Verified" => "px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold inline-block",
        "Flagged" => "px-4 py-2 bg-yellow-100 text-yellow-800 rounded-full text-sm font-semibold inline-block",
        _ => "px-4 py-2 bg-gray-100 text-gray-800 rounded-full text-sm font-semibold inline-block"
    };

    string GetVerificationLabel(string status) => status switch
    {
        "Certified" => "✓ Certyfikowana",
        "Verified" => "✓ Zweryfikowana",
        "Flagged" => "⚠ Wymaga sprawdzenia",
        _ => "Niezweryfikowana"
    };

    string GetFacilityTypeLabel(string type) => type switch
    {
        "Therapy" => "Terapia",
        "School" => "Szkoła",
        "SupportCenter" => "Centrum wsparcia",
        "Clinic" => "Przychodnia",
        _ => "Inne"
    };
}
