@model List<OazaDlaAutyzmu.Domain.Entities.Notification>
@{
    ViewData["Title"] = "Powiadomienia";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Powiadomienia</h1>
            @if (Model.Any(n => !n.IsRead))
            {
                <form asp-action="MarkAllAsRead" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="px-4 py-2 btn-primary rounded-lg transition">
                        Oznacz wszystkie jako przeczytane
                    </button>
                </form>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="bg-white rounded-lg shadow p-8 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
                <h3 class="mt-2 text-lg font-medium text-gray-900">Brak powiadomie≈Ñ</h3>
                <p class="mt-1 text-sm text-gray-500">Nie masz jeszcze ≈ºadnych powiadomie≈Ñ.</p>
            </div>
        }
        else
        {
            <div class="space-y-3">
                @foreach (var notification in Model)
                {
                    <div class="bg-white rounded-lg shadow @(!notification.IsRead ? "border-l-4 border-indigo-600" : "") hover:shadow-lg transition">
                        <div class="p-4">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-2">
                                        @if (notification.Type == "ReviewApproved")
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                ‚úì Zatwierdzono
                                            </span>
                                        }
                                        else if (notification.Type == "ReviewRejected")
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                ‚úó Odrzucono
                                            </span>
                                        }
                                        else if (notification.Type == "TopicReply")
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                üí¨ Odpowied≈∫
                                            </span>
                                        }
                                        else if (notification.Type == "Mention")
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                                üè∑Ô∏è Wspomnienie
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                ‚Ñπ System
                                            </span>
                                        }
                                        @if (!notification.IsRead)
                                        {
                                            <span class="inline-flex h-2 w-2 rounded-full bg-indigo-600"></span>
                                        }
                                    </div>
                                    <h3 class="mt-2 text-base font-semibold text-gray-900">@notification.Title</h3>
                                    <p class="mt-1 text-sm text-gray-600">@notification.Message</p>
                                    <p class="mt-2 text-xs text-gray-500">@notification.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                                </div>
                                <div class="ml-4 flex-shrink-0 flex items-center space-x-2">
                                    @if (!string.IsNullOrEmpty(notification.Url))
                                    {
                                        <a href="@notification.Url" class="link-strong" aria-label="Przejd≈∫ do powiadomienia">
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                            </svg>
                                        </a>
                                    }
                                    @if (!notification.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="link-strong" title="Oznacz jako przeczytane">
                                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="Delete" asp-route-id="@notification.Id" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="text-red-600 hover:text-red-800" title="Usu≈Ñ">
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="mt-6 text-center">
            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center px-3 py-2 btn-secondary rounded-lg font-medium">
                ‚Üê Powr√≥t do strony g≈Ç√≥wnej
            </a>
        </div>
    </div>
</div>
