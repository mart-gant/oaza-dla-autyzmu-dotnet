@model List<OazaDlaAutyzmu.Application.DTOs.ForumCategoryDto>
@{
    ViewData["Title"] = "Forum";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Forum społeczności</h1>
    </div>

    <div class="space-y-4">
        @foreach (var category in Model)
        {
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition">
                <div class="flex justify-between items-start">
                    <div class="flex-1">
                        <a asp-action="Category" asp-route-id="@category.Id" 
                           class="text-2xl font-bold text-indigo-600 hover:text-indigo-800 dark:text-indigo-400">
                            @category.Name
                        </a>
                        
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="text-gray-600 dark:text-gray-400 mt-2">
                                @category.Description
                            </p>
                        }

                        @if (category.LatestTopic != null)
                        {
                            <div class="mt-4 text-sm text-gray-500 dark:text-gray-400">
                                <span class="font-medium">Ostatni temat:</span>
                                <a asp-action="Topic" asp-route-id="@category.LatestTopic.Id" 
                                   class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 ml-1">
                                    @category.LatestTopic.Title
                                </a>
                                <span class="ml-2">przez @category.LatestTopic.UserName</span>
                            </div>
                        }
                    </div>
                    
                    <div class="text-right ml-6">
                        <div class="text-2xl font-bold text-gray-900 dark:text-white">
                            @category.TopicCount
                        </div>
                        <div class="text-sm text-gray-600 dark:text-gray-400">tematów</div>
                        <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                            @category.PostCount postów
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
