@model OazaDlaAutyzmu.Domain.Entities.Facility
@{
    ViewData["Title"] = "Dodaj zdjęcie - " + Model.Name;
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Dodaj zdjęcie</h1>
        <p class="text-gray-600 dark:text-gray-400">@Model.Name</p>
        <a asp-action="Index" asp-route-facilityId="@Model.Id" class="link-strong">
            ← Powrót do galerii
        </a>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <form asp-action="Upload" asp-route-facilityId="@Model.Id" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="mb-6">
                <label for="file" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Plik zdjęcia *
                </label>
                <input type="file" 
                       id="file" 
                       name="file" 
                       accept="image/jpeg,image/png,image/gif,image/webp"
                       required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                       onchange="previewImage(event)">
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                    Dozwolone formaty: JPG, PNG, GIF, WebP. Maksymalny rozmiar: 5MB
                </p>
            </div>

            <!-- Image Preview -->
            <div id="preview-container" class="mb-6 hidden">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Podgląd
                </label>
                <img id="preview" src="" alt="Preview" class="max-w-full h-auto rounded-lg shadow-md">
            </div>

            <div class="mb-6">
                <label for="caption" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Opis (opcjonalny)
                </label>
                <input type="text" 
                       id="caption" 
                       name="caption" 
                       maxlength="200"
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                       placeholder="Np. Sala terapeutyczna, Plac zabaw...">
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                    Maksymalnie 200 znaków
                </p>
            </div>

            <div class="flex gap-3">
                <button type="submit" 
                        class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                    Prześlij zdjęcie
                </button>
                <a asp-action="Index" asp-route-facilityId="@Model.Id" 
                   class="px-6 py-3 btn-secondary rounded-lg transition-colors font-medium text-center">
                    Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Check file size (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('Plik jest zbyt duży. Maksymalny rozmiar to 5MB.');
                    event.target.value = '';
                    document.getElementById('preview-container').classList.add('hidden');
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('preview-container').classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById('preview-container').classList.add('hidden');
            }
        }
    </script>
}
