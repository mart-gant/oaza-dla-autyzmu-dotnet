@model IEnumerable<OazaDlaAutyzmu.Domain.Entities.FacilityImage>
@{
    var facility = ViewBag.Facility as OazaDlaAutyzmu.Domain.Entities.Facility;
    var facilityName = facility?.Name ?? "Placówka";
    ViewData["Title"] = "Galeria - " + facilityName;
    var canEdit = ViewBag.CanEdit as bool? ?? false;
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Galeria</h1>
        <p class="text-gray-600 dark:text-gray-400">@facilityName</p>
        @if (facility != null)
        {
            <a asp-controller="Facilities" asp-action="Details" asp-route-id="@facility.Id" class="link-strong">
                ← Powrót do placówki
            </a>
        }
    </div>

    @if (canEdit && facility != null)
    {
        <div class="mb-6">
            <a asp-action="Upload" asp-route-facilityId="@facility.Id" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Dodaj zdjęcie
            </a>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Brak zdjęć</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Ta placówka nie ma jeszcze żadnych zdjęć.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var image in Model)
            {
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden group relative">
                    <div class="relative">
                        <img src="@image.ImageUrl" 
                             alt="@(image.Caption ?? facilityName)" 
                             class="w-full h-64 object-cover cursor-pointer hover:opacity-90 transition-opacity"
                             onclick="openLightbox('@image.ImageUrl', '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(image.Caption ?? facilityName))')">
                        
                        @if (image.IsMain)
                        {
                            <span class="absolute top-2 left-2 bg-blue-600 text-white text-xs px-2 py-1 rounded">
                                Zdjęcie główne
                            </span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(image.Caption))
                    {
                        <div class="p-3">
                            <p class="text-sm text-gray-700 dark:text-gray-300">@image.Caption</p>
                        </div>
                    }

                    @if (canEdit)
                    {
                        <div class="p-3 border-t border-gray-200 dark:border-gray-700 flex gap-2">
                            @if (!image.IsMain)
                            {
                                <form asp-action="SetMain" asp-route-id="@image.Id" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="text-sm link-strong">
                                        Ustaw jako główne
                                    </button>
                                </form>
                            }
                            <form asp-action="Delete" asp-route-id="@image.Id" method="post" 
                                  onsubmit="return confirm('Czy na pewno chcesz usunąć to zdjęcie?');" class="inline ml-auto">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-sm text-red-600 hover:text-red-800 dark:text-red-400">
                                    Usuń
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<!-- Lightbox Modal -->
<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-90 hidden z-50 flex items-center justify-center" onclick="closeLightbox()" role="dialog" aria-modal="true" aria-label="Podgląd zdjęcia" tabindex="-1">
    <div class="relative max-w-7xl max-h-screen p-4" onclick="event.stopPropagation()">
        <button onclick="closeLightbox()" class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300" aria-label="Zamknij podgląd">
            &times;
        </button>
        <img id="lightbox-img" src="" alt="" class="max-w-full max-h-screen object-contain">
        <p id="lightbox-caption" class="text-white text-center mt-4"></p>
    </div>
</div>

@section Scripts {
<script>
    function openLightbox(imageUrl, caption) {
        document.getElementById('lightbox-img').src = imageUrl;
        document.getElementById('lightbox-caption').textContent = caption;
        const lightbox = document.getElementById('lightbox');
        lightbox.classList.remove('hidden');
        lightbox.focus();
    }

    function closeLightbox() {
        document.getElementById('lightbox').classList.add('hidden');
    }

    // Close on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeLightbox();
        }
    });
</script>
}
