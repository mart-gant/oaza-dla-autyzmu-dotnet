@model List<OazaDlaAutyzmu.Application.DTOs.ReviewDto>
@{
    ViewData["Title"] = "Opinie do zatwierdzenia";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white">
            Opinie do zatwierdzenia
        </h1>
        <a asp-action="Index" class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 font-medium">
            ← Powrót do panelu
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-12 text-center">
            <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                Wszystkie opinie zostały sprawdzone
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
                Nie ma nowych opinii do zatwierdzenia.
            </p>
        </div>
    }
    else
    {
        <div class="space-y-6">
            @foreach (var review in Model)
            {
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex-1">
                            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                                <a asp-controller="Facilities" asp-action="Details" asp-route-id="@review.FacilityId" 
                                   class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400">
                                    @review.FacilityName
                                </a>
                            </h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                Autor: <strong>@review.UserName</strong> • 
                                Data: @review.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </p>
                        </div>
                        <div class="flex items-center">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <svg class="w-5 h-5 @(i <= review.Rating ? "text-yellow-500" : "text-gray-300")" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                </svg>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(review.Comment))
                    {
                        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-4">
                            <p class="text-gray-700 dark:text-gray-300">
                                @review.Comment
                            </p>
                        </div>
                    }

                    <div class="flex gap-3">
                        <form asp-action="ApproveReview" asp-route-id="@review.Id" method="post" class="inline">
                            <button type="submit" class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition">
                                ✓ Zatwierdź
                            </button>
                        </form>
                        
                        <form asp-action="RejectReview" asp-route-id="@review.Id" method="post" class="inline" 
                              onsubmit="return confirm('Czy na pewno chcesz odrzucić tę opinię?');">
                            <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition">
                                ✗ Odrzuć
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
