@model IEnumerable<OazaDlaAutyzmu.Domain.Entities.ContactMessage>
@{
    ViewData["Title"] = "Wiadomości kontaktowe";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Wiadomości kontaktowe</h1>
        <p class="text-gray-600 dark:text-gray-400">Zarządzaj wiadomościami od użytkowników</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Brak wiadomości</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Nie masz jeszcze żadnych wiadomości kontaktowych.</p>
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-900">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Data</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Placówka</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Nadawca</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Temat</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Akcje</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var message in Model)
                        {
                            <tr class="@(message.IsRead ? "" : "bg-blue-50 dark:bg-blue-900/20")">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (message.IsRead)
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                                            Przeczytana
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
                                            Nowa
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-300">
                                    @message.SentAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-300">
                                    <a asp-controller="Facilities" asp-action="Details" asp-route-id="@message.FacilityId" class="text-blue-600 hover:text-blue-800 dark:text-blue-400">
                                        @message.Facility.Name
                                    </a>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 dark:text-gray-300">@message.SenderName</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400">@message.SenderEmail</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900 dark:text-gray-300 mb-1">@message.Subject</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400 max-w-md truncate">@message.Message</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    @if (!message.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" asp-route-id="@message.Id" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 mr-3">
                                                Oznacz jako przeczytaną
                                            </button>
                                        </form>
                                    }
                                    <a href="mailto:@message.SenderEmail?subject=Re: @message.Subject" class="text-green-600 hover:text-green-800 dark:text-green-400 mr-3">
                                        Odpowiedz
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@message.Id" method="post" 
                                          onsubmit="return confirm('Czy na pewno chcesz usunąć tę wiadomość?');" class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="text-red-600 hover:text-red-800 dark:text-red-400">
                                            Usuń
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
