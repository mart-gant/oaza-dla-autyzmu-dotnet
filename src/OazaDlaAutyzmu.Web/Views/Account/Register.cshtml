@{
    ViewData["Title"] = "Rejestracja";
}

<div class="max-w-md mx-auto px-4 py-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6 text-center">
            Utwórz konto
        </h1>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            
            <div class="mb-4">
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
                    Email
                </label>
                <input type="email" name="email" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 dark:bg-gray-900 dark:text-white"
                       placeholder="twoj@email.com" />
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
                    Hasło
                </label>
                <input type="password" name="password" required
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 dark:bg-gray-900 dark:text-white"
                       placeholder="••••••••" />
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                    Minimum 6 znaków
                </p>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
                    Imię
                </label>
                <input type="text" name="firstName"
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 dark:bg-gray-900 dark:text-white"
                       placeholder="Jan" />
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
                    Nazwisko
                </label>
                <input type="text" name="lastName"
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 dark:bg-gray-900 dark:text-white"
                       placeholder="Kowalski" />
            </div>

            <div class="g-recaptcha" data-sitekey="@ViewBag.RecaptchaSiteKey"></div>

            <button type="submit" 
                    class="w-full px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition">
                Zarejestruj się
            </button>
        </form>

        <div class="mt-6 text-center text-gray-600 dark:text-gray-400">
            <p>
                Masz już konto?
                <a asp-action="Login" class="text-indigo-600 hover:text-indigo-800 font-semibold">
                    Zaloguj się
                </a>
            </p>
        </div>
    </div>
</div>
