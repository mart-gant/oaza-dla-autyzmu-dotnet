@{
    ViewData["Title"] = "Weryfikacja Dwuskładnikowa";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Weryfikacja Dwuskładnikowa
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Wprowadź kod z aplikacji autentykującej
            </p>
        </div>

        <form class="mt-8 space-y-6" asp-action="LoginWith2FA" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="code" class="sr-only">Kod weryfikacyjny</label>
                    <input id="code" 
                           name="code" 
                           type="text" 
                           required 
                           maxlength="6"
                           pattern="[0-9]{6}"
                              inputmode="numeric"
                              autocomplete="one-time-code"
                           class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="Kod weryfikacyjny (6 cyfr)">
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="rounded-md bg-red-50 p-4" role="alert" aria-live="polite">
                    <div class="text-sm text-red-800">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
            }

            <div>
                <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Weryfikuj
                </button>
            </div>

            <div class="text-center">
                <a asp-action="Login" class="link-strong">
                    Wróć do logowania
                </a>
            </div>
        </form>
    </div>
</div>
