@{
    ViewData["Title"] = "Włącz Uwierzytelnianie Dwuskładnikowe";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Uwierzytelnianie Dwuskładnikowe
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Zwiększ bezpieczeństwo swojego konta
            </p>
        </div>

        <div class="mt-8 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <div class="space-y-6">
                <div>
                    <p class="text-sm text-gray-700 mb-4">
                        Aby włączyć uwierzytelnianie dwuskładnikowe:
                    </p>
                    <ol class="list-decimal list-inside space-y-2 text-sm text-gray-600">
                        <li>Pobierz aplikację Google Authenticator lub Microsoft Authenticator</li>
                        <li>Zeskanuj poniższy kod QR lub wpisz klucz ręcznie</li>
                        <li>Wprowadź 6-cyfrowy kod z aplikacji</li>
                    </ol>
                </div>

                <div class="border-t border-gray-200 pt-6">
                    <div class="text-center">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@ViewBag.QRCodeUrl" 
                             alt="QR Code" 
                             class="mx-auto mb-4" />
                        <p class="text-sm text-gray-600">lub wprowadź klucz ręcznie:</p>
                        <p class="text-lg font-mono font-bold text-gray-900 mt-2">
                            @ViewBag.AuthenticatorKey
                        </p>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-6">
                    <form asp-action="Enable2FA" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div>
                            <label for="code" class="block text-sm font-medium text-gray-700">
                                Kod weryfikacyjny (6 cyfr)
                            </label>
                            <input id="code" 
                                   name="code" 
                                   type="text" 
                                   required 
                                   maxlength="6"
                                   pattern="[0-9]{6}"
                                   class="mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                                   placeholder="123456">
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="mt-4 rounded-md bg-red-50 p-4">
                                <div class="flex">
                                    <div class="ml-3">
                                        <p class="text-sm text-red-800">
                                            @Html.ValidationSummary(false, "", new { @class = "text-sm text-red-800" })
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mt-6">
                            <button type="submit"
                                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Włącz 2FA
                            </button>
                        </div>
                    </form>
                </div>

                <div class="text-center">
                    <a asp-action="Index" asp-controller="Home" class="text-sm text-indigo-600 hover:text-indigo-500">
                        Anuluj
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
