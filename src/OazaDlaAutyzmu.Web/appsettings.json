  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ],
    "EndpointSpecificRules": [
      {
        "Endpoint": "post:/reviews/create",
        "Period": "1h",
        "Limit": 5
      },
      {
        "Endpoint": "post:/forum/createpost",
        "Period": "1h",
        "Limit": 20
      },
      {
        "Endpoint": "post:/forum/createtopic",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "post:/account/register",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "post:/account/login",
        "Period": "15m",
        "Limit": 10
