    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": "587",
    "SmtpUsername": "",
    "SmtpPassword": "",
    "SenderEmail": "noreply@oaza.pl",
    "SenderName": "Oaza dla Autyzmu"
  },
  "RecaptchaSettings": {
    "SiteKey": "your-site-key-here",
